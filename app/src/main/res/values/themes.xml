<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ITunesService" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="actionBarTheme">@style/ToolbarStyle</item>
        <item name="android:textViewStyle">@style/GeneralTextStyle</item>
    </style>

    <!-- Toolbar TextStyle -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="fontFamily">@font/arvo</item>
    </style>

    <!-- Defautl TextStyle -->
    <style name="GeneralTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/arvo</item>
    </style>

    <!-- Tabs On List Page TextSize -->
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">12sp</item>
    </style>
</resources>